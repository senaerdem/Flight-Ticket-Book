@model List<Flight>

<div class="d-flex justify-content-between align-items-center">
    <div class="display-6 text-primary ms-2 text-center">
        @_localization.Getkey("Plane List").Value
    </div>
    <div>
        <a asp-controller="Operator" asp-action="CreateFlight" class="btn btn-primary">@_localization.Getkey("Create Plane").Value</a>
    </div>
</div>
<hr>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Kapasite</th>
            <th scope="col">Eğlence Paketi Var</th>
            <th scope="col">Yemek Servisi Var</th>
            <th scope="col">Ücretsiz Bagaj Var</th>
            <th scope="col">Hareketler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.Id</td>
                <td>@flight.Capacity</td>
                <td>@flight.HasSeatScreen</td>
                <td>@flight.HasUSB</td>
                <td>@flight.HasWifi</td>

                <td>
                    <div>
                        <a type="button" class="btn btn-outline-warning" asp-controller="Operator" asp-action="UpdateFlight" asp-route-id=@flight.Id>@_localization.Getkey("Update").Value</a>
                        <a asp-controller="Operator" asp-action="DeleteFlight" asp-route-id=@flight.Id type="button" class="btn btn-outline-danger">@_localization.Getkey("Delete").Value</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
