@model FlightModel

<div class="display-6 text-primary ms-2 text-center">
    @_localization.Getkey("Create Plane").Value
</div>
<hr>
<form asp-controller="Operator" asp-action="Create" method="post">
    <div class="row mt-4">
        <div class="offset-3 col-md-6">
            <div class="row">
                <div class="col-md-2">
                    <label class="col-form-label" asp-for="Capacity"></label>
                </div>
                <div class="col-md-8">
                    <select class="form-select" asp-for="Capacity">
                        <option disabled hidden selected>@_localization.Getkey("Select a number").Value</option>
                        @{
                            int i = 12;
                            while (i < 61)
                            {
                                <option value=@i>@i</option>
                                i = i + 4;
                            }
                        }
                    </select>
                </div>
                <div class="col-2 text-start">
                    <button class="btn btn-primary btn-md" type="submit">@_localization.Getkey("Create").Value</button>
                </div>
                <div class="offset-2 col">
                    <strong><span class="text-danger" asp-validation-for="Capacity"></span></strong>
                </div>
            </div>

        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row mt-2">
        <div class="offset-3 col-md-6">
            <div class="row">
                <div class="offset-2 col-md-8 d-flex align-items-center">
                    <input class="form-check-input mt-0" asp-for="HasWifi" type="checkbox">
                    <label class="col-form-label ms-1" asp-for="HasWifi">Has Free Baggage</label>
                </div>
            </div>
             <div class="row">
                <div class="offset-2 col-md-8 d-flex align-items-center">
                    <input class="form-check-input mt-0" asp-for="HasUSB" type="checkbox">
                    <label class="col-form-label ms-1" asp-for="HasUSB">Has Fun Package</label>
                </div>
            </div>
              <div class="row">
                <div class="offset-2 col-md-8 d-flex align-items-center">
                    <input class="form-check-input mt-0" asp-for="HasSeatScreen" type="checkbox">
                    <label class="col-form-label ms-1" asp-for="HasSeatScreen">Has Sandwich</label>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>
