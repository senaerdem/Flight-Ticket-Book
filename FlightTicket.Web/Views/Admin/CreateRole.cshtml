@model RoleModel

<div class="display-6 text-primary ms-2 text-center">
    @_localization.Getkey("Create Role").Value
</div>
<hr>
<form asp-controller="Admin" asp-action="CreateRole" method="post">
    <div class="row mt-4">
        <div class="offset-3 col-md-6">
            <div class="row">
                <div class="col-md-2">
                    <label class="col-form-label" asp-for="Name">@_localization.Getkey("Name").Value</label>
                </div>
                <div class="col-md-8">
                    <input class="form-control" asp-for="Name" />
                </div>
                <div class="col-2 text-start">
                    <button class="btn btn-primary btn-md" type="submit">@_localization.Getkey("Create").Value</button>
                </div>
                <div class="offset-2 col">
                    <strong><span class="text-danger" asp-validation-for="Name"></span></strong>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>