@model List<UserWithRolesModel>

@section DataTableScriptCDN{
    @await Html.PartialAsync("_DataTableScriptCDNPartial")
}

    @section DataTableCssCDN{
    @await Html.PartialAsync("_DataTableCssCDNPartial")
}

    <div class="d-flex justify-content-between align-items-center">
        <div class="display-6 text-primary ms-2 text-center">
            @_localization.Getkey("User List").Value
        </div>
        <div>
        <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary">@_localization.Getkey("Create User").Value</a>
        </div>
    </div>
    <hr>

    <table id="userTable_id" class="display">
        <thead>
            <tr>
            <th>@_localization.Getkey("First Name").Value</th>
                <th>@_localization.Getkey("Last Name").Value</th>
                <th>@_localization.Getkey("Username").Value</th>
                <th>@_localization.Getkey("Email").Value</th>
                <th>@_localization.Getkey("Roles").Value</th>
                <th>@_localization.Getkey("Actions").Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <span><strong>@role </strong></span>
                    }
                </td>

                <td>
                    <div>
                        <a class="btn btn-sm btn-outline-warning" asp-controller="Admin" asp-action="EditUserRoles" asp-route-id=@user.UserId>@_localization.Getkey("Edit User Role").Value</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Admin" asp-action="EditUserDetails" asp-route-id=@user.UserId>@_localization.Getkey("Edit User Details").Value</a>
                        <a class="btn btn-sm btn-outline-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-id=@user.UserId>@_localization.Getkey("Delete").Value</a>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>


